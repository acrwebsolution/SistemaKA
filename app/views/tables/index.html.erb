<p id="notice"><%= notice %></p>

<h1>Listing Tables</h1>

<table>
  <thead>
    <tr>
      <th>Codmesa</th>
      <th>Codlocal</th>
      <th>Codcliente</th>
      <th>Descripcion</th>
      <th>Capacidad</th>
      <th>Precioconsumo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.codmesa %></td>
        <td><%= table.codlocal %></td>
        <td><%= table.codcliente %></td>
        <td><%= table.descripcion %></td>
        <td><%= table.capacidad %></td>
        <td><%= table.precioconsumo %></td>
        <td><%= link_to 'Show', table %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

