<p id="notice"><%= notice %></p>

<h1>Listing Bill Details</h1>

<table>
  <thead>
    <tr>
      <th>Nrofactura</th>
      <th>Codpedprod</th>
      <th>Codcliente</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bill_details.each do |bill_detail| %>
      <tr>
        <td><%= bill_detail.nrofactura %></td>
        <td><%= bill_detail.codpedprod %></td>
        <td><%= bill_detail.codcliente %></td>
        <td><%= bill_detail.precio %></td>
        <td><%= link_to 'Show', bill_detail %></td>
        <td><%= link_to 'Edit', edit_bill_detail_path(bill_detail) %></td>
        <td><%= link_to 'Destroy', bill_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

